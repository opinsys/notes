<textarea></textarea>
{{#if imagePreview}}
  <div class="image-preview"></div>
{{/if}}
<div class="button-container clearfix">
  <span class="fake-file-input" title="Add picture"><i class="icon-picture"></i>
    <input size="2" class="image-select" type="file" value="PIC">
    <!-- Firefox hack: max-width:768px <input size="7" class="image-select" type="file" value="PIC"> -->
  </span>
  {{#if autoScroll}}
  <span class="auto-scroll"><i class="icon-lock"></i>autoscroll</span>
  {{else}}
    <span class="auto-scroll-open"><i class="icon-lock-open"></i>autoscroll</span>
  {{/if}}
  <button>Lähetä</button>
</div>

