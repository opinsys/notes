
// Structure
.bb-send-form
  bottom 0
  left 0
  padding 0.25em
  position fixed
  width 100%
  textarea
    margin 0
    max-width 100%
    min-height 40px
    width 100%
  .button-container
    button
      float right
      padding 0.5em
      user-select none
      width 10%
      &:hover
        cursor pointer

@media screen and (max-width:768px)

  .bb-send-form
    .button-container
      button
        padding 1em
        width 20%
