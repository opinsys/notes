@media landscapeTablet
  .send-form-container
    .bb-send-form
      max-height 100%
      padding 0.5em
      .button-container
        .auto-scroll, .auto-scroll-open
          font-size 120%
          height 52px
          position absolute
          top 25%
        .fake-file-input
          font-size 120%
          line-height 0
          i
            font-size 120%
          button
            font-size 100%
          input[type="file"]
            height 52px
        button, .fake-file-input
          height 52px
          padding 1em
          width 20%

@media portraitTablet
  .send-form-container
    height auto
    position static
    .bb-send-form
      bottom 0
      left 0
      padding 0.25em
      position fixed
      width 100%
      z-index 9999
      .button-container
        .auto-scroll, .auto-scroll-open
          font-size 120%
          height 52px
          position absolute
          top 25%
        .fake-file-input
          font-size 120%
          line-height 0
          i
            font-size 120%
          button
            font-size 100%
          input[type="file"]
            height 52px
        button, .fake-file-input
          height 52px
          padding 1em
          width 20%

@media smallHeight
  .send-form-container
    height 15%