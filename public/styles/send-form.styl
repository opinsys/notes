@import "mediaqueries"

// Structure
.send-form-container
  height 10%
  position relative
  .bb-send-form
    bottom 0
    max-height 100%
    padding 0.25em
    position absolute
    width 100%
    z-index 9999
    textarea
      margin 0
      max-height 100px
      max-width 100%
      min-height 40px
      width 100%
    .button-container
      padding-bottom 0.25em
      position relative
      .auto-scroll, .auto-scroll-open
        margin-left 2%

      .fake-file-input, button
        min-width 95px
      .fake-file-input
        display inline-block
        height 26px
        line-height 2
        position relative
        width 10%
        &:hover
          cursor pointer
        &:before
          content "+"
          padding-right 0.25em
        input[type="file"]
          height 26px
          left 0
          position absolute
          top 0
          width 100%
      button
        height 26px
        float right
        padding 0.5em
        user-select none
        width 10%
        &:hover
          cursor pointer

    .image-preview
      img
        max-height 200px
        height auto


