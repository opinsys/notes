
// Structure
.bb-send-form
  bottom 0
  left 0
  padding 0.25em
  position fixed
  width 100%
  z-index 9999
  textarea
    margin 0
    max-width 100%
    min-height 40px
    width 100%
  .button-container
    .fake-file-input, button
      min-width 95px
    .fake-file-input
      display inline-block
      height 26px
      line-height 2
      position relative
      vertical-align middle
      width 10%
      &:before
        content "+"
        padding-right 0.25em
      input[type="file"]
        height 26px
        left 0
        position absolute
        top 0
        width 100%
    button
      float right
      padding 0.5em
      user-select none
      width 10%
      &:hover
        cursor pointer

  .image-preview
    img
      max-height 200px
      height auto


