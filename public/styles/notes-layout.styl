@import "mediaqueries"

.bb-notes-layout
  margin 0 auto
  padding 1em
  width 100%

  header
    height 65px
    padding 0
    position relative
    .bb-notes-name
      .title-wrap
        float left
        width 78%
        h1
          line-height 1
      .opinsys-labs-wrap
        float right
        width 20%
        img
          max-width 200px
          min-width 80px
          width 90%

@media landscapeTablet
  .bb-notes-layout
    header
      padding 0 1em
      .bb-notes-name
        .opinsys-labs-wrap
          padding 0.25em
          img
            min-width 0
            width 100%

@media portraitTablet
  .bb-notes-layout
    header
      padding 0 1em
      .bb-notes-name
        .opinsys-labs-wrap
          padding 0.25em
          img
            min-width 0
            width 100%

@media phones
  .bb-notes-layout
    padding-top 0.6em
    header
      padding 0
      height 38px
