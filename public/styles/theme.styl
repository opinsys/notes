
.bb-send-form
  background-color rgba(230,230,220,0.5)
  textarea
    background-color rgba(230,230,230,0.5)
    border 1px solid #888
    border-radius 1px
  .button-container
    button
      background-color #dedede
      background-image linear-gradient(top, #ECEADA, #D5CDBA)
      border 1px solid rgba(214, 214, 214, 0.85)
      border-radius 2px
      color #666
      text-shadow 1px 1px 1px #ddd
      text-transform uppercase
      &:hover, &:active
        background-image linear-gradient(top, #ECEADA, #BBB3A1)
        box-shadow inset 0 0 20px rgba(237,113,19,0.2)



.bb-timeline
  h1
    font-size 300%
    color rgb(237,113,19)

  .item-container
    border none



// Style
.bb-text-item
  border-bottom 1px solid #ECEADA
  font-size 100%

  p
    color #333

  .created
    color #777
    color rgba(119, 119, 119, 0.5)
    font-size 70%

  .extras > div
    padding 5px
    border 1px dotted pink
    font-size 8pt
    margin 5px

// Custom scrollbar (webkit only)
.no-touch
  ::-webkit-scrollbar
      width 12px

  ::-webkit-scrollbar-track
    box-shadow inset 0 0 6px rgba(65,120,107,0.3)
    border-radius 2px

  ::-webkit-scrollbar-thumb
    background-image linear-gradient(top,rgba(237,113,19,0.05) 0%, rgba(237,113,19,0.55) 50%, rgba(237,113,19,0.05) 100%)
    border-radius 2px
    box-shadow inset 0 0 2px rgba(237,113,19,0.15)

@media screen and (max-width:768px)
  .no-touch ::-webkit-scrollbar
    width 20px

  .bb-send-form
    .button-container
      button
        font-size 100%
