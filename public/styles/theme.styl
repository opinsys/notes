@media landscapeTablet
  .bb-send-form
    padding 0.5em
    .button-container
        font-size 120%
      .fake-file-input, .auto-scroll, .auto-scroll-open
        font-size 120%
        i
          font-size 120%
      button
        font-size 100%

@media portraitTablet
  .bb-send-form
    padding 0.5em
    .button-container
      .fake-file-input, .auto-scroll, .auto-scroll-open
        font-size 120%
        i
          font-size 120%
      button
        font-size 100%
  .bb-notes-layout
    h1
      font-size 120%

@media smallScreens
  .bb-notes-layout
    h1
      font-size 120%