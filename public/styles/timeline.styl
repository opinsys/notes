
@import "mediaqueries"

// Structure
.bb-timeline

  .item-container-wrap
    bottom 85px
    left 0
    margin 0
    padding 1em
    position absolute
    top 65px
    width 100%
    z-index 1
    overflow auto
  &.image-preview-active
    .item-container-wrap
      bottom 310px
  .send-form-container
    bottom 0px
    position absolute
    z-index 100

// ipad scroll fix
.touch .bb-timeline .item-container
  padding-bottom 50px


